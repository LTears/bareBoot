+set /a THREADS=NUMBER_OF_PROCESSORS*2
+set _BUILD_OPTIONS_=^
+-p %PLATFORMFILE% ^
+-b %BUILDTARGET% ^
+-t %TOOL_CHAIN_TAG% ^
+-a %TARGETARCH% ^
+-D DEBUG_PRINT_LEVEL=%DEBUG_PRINT_LEVEL% ^
+-D BUILD_NEW_SHELL ^
+-D LOGO_FILE=%LOGO_FILE% ^
+-D X64_STACK_TOP=%X64_STACK_TOP% ^
+-D FAKE_NVRAM_BASE=%FAKE_NVRAM_BASE% ^
+-D FAKE_NVRAM_SIZE=%FAKE_NVRAM_SIZE% ^
+-n %THREADS%
