OUTPUT_DIR=$(MODULE_DIR)/bin

TARGET_FILES = \
  $(OUTPUT_DIR)/bootx0af \
  $(OUTPUT_DIR)/bootx0ss \
  $(OUTPUT_DIR)/bootx1f32 \
  $(OUTPUT_DIR)/bootx1f32alt \
  $(OUTPUT_DIR)/EfiLdrPreludeIA32 \
  $(OUTPUT_DIR)/EfiLdrPreludeX64 \
  $(OUTPUT_DIR)/nopsector

INCLUDE_FILES = \
  $(MODULE_DIR)/Include/bootxdefs.nasm \
  $(MODULE_DIR)/Include/bpbxx-inc.nasm \
  $(MODULE_DIR)/Include/efifvfile.nasm \
  $(MODULE_DIR)/Include/efiimage.nasm \
  $(MODULE_DIR)/Include/fatstruct.nasm \
  $(MODULE_DIR)/Include/gptstruct.nasm \
  $(MODULE_DIR)/Include/mbrstruct.nasm

all:	$(TARGET_FILES)

#=============

$(OUTPUT_DIR)/bootx0af:	$(MODULE_DIR)/bootx0.nasm $(INCLUDE_FILES)
	nasm -Ox -DACTIVEFIRST=1 -i $(MODULE_DIR)/Include/ -o $@ $(MODULE_DIR)/bootx0.nasm

$(OUTPUT_DIR)/bootx0ss:	$(MODULE_DIR)/bootx0.nasm $(INCLUDE_FILES)
	nasm -Ox -DACTIVEFIRST=0 -i $(MODULE_DIR)/Include/ -o $@ $(MODULE_DIR)/bootx0.nasm

#=============

$(OUTPUT_DIR)/bootx1f32:	$(MODULE_DIR)/bootx1f32.nasm $(INCLUDE_FILES)
	nasm -Ox -DBOOTSEL=0 -DUSESIDL=1 -DVERBOSE=1 -i $(MODULE_DIR)/Include/ -o $@ $(MODULE_DIR)/bootx1f32.nasm

$(OUTPUT_DIR)/bootx1f32alt:	$(MODULE_DIR)/bootx1f32.nasm $(INCLUDE_FILES)
	nasm -Ox -DBOOTSEL=1 -DUSESIDL=1 -DVERBOSE=1 -i $(MODULE_DIR)/Include/ -o $@ $(MODULE_DIR)/bootx1f32.nasm

#=============

$(OUTPUT_DIR)/EfiLdrPreludeIA32:	$(MODULE_DIR)/EfiLdrPrelude.nasm $(INCLUDE_FILES)
	nasm -Ox -DX64=0 -i $(MODULE_DIR)/Include/ -o $@ $(MODULE_DIR)/EfiLdrPrelude.nasm

$(OUTPUT_DIR)/EfiLdrPreludeX64:	$(MODULE_DIR)/EfiLdrPrelude.nasm $(INCLUDE_FILES)
	nasm -Ox -DX64=1 -i $(MODULE_DIR)/Include/ -o $@ $(MODULE_DIR)/EfiLdrPrelude.nasm

#=============

$(OUTPUT_DIR)/nopsector:	$(MODULE_DIR)/nopsector.nasm
	nasm -Ox -o $@ $?

#=============

clean:
	$(RM) $(TARGET_FILES)

cleanall:
	$(RM) $(TARGET_FILES)
